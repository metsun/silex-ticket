{% extends 'layout.html.twig' %}

{% block title %}Kullanıcılar{% endblock title %}
{% block description %}{% endblock description %}
{% block h1 %}{% endblock h1 %}

{% block content %}
	{% if app.session.get('giris') %}
		
		<div class="container">
			<div class="col-xs-12">
				<h1>Hoşgeldin {{app.session.get('giris').kullanıcı }}</h1>
				<p>Hoşgeldiniz anasayfaya, çıkış yapmak için tıklayın <a href="{{ path('sil') }}"> Çıkış Yap </a></p>
			</div>
		</div>
	

		{# son ticketler #}
		<div class="container">
			<div class="col-xs-12">
				<a href="{{ path("ticket.olustur") }}" class="btn btn-primary pull-right">Ticket Oluştur</a>
				
				<div class="son-ticketler">
						


				</div>
	
			</div>
		</div>



	{% else %}

		Hoşgeldin giriş yapmak için tıkla <a href="{{ path('kullanici.giris') }}"> Giriş Yap</a>

	{% endif %}


{% endblock content %}
